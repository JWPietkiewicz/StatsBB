<Window x:Class="StatsBB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:StatsBB.UserControls" 
        xmlns:viewmodel="clr-namespace:StatsBB.ViewModel" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:converters="clr-namespace:StatsBB.Converters"
        Title="Basketball Stats Map" Height="1080" Width="1920">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>


        <SolidColorBrush x:Key="CourtAColor" Color="Orange"/>
        <SolidColorBrush x:Key="CourtBColor" Color="Green"/>
        <SolidColorBrush x:Key="BenchColor" Color="LightGray"/>
        <SolidColorBrush x:Key="DisabledColor" Color="LightGray"/>
        <SolidColorBrush x:Key="HoverGrey" Color="#D3D3D3"/>
        <SolidColorBrush x:Key="SelectedMadeColor" Color="Green"/>
        <SolidColorBrush x:Key="SelectedMissedColor" Color="Red"/>
        <SolidColorBrush x:Key="DarkGrey" Color="DarkGray"/>
        <SolidColorBrush x:Key="Grey" Color="Gray"/>

        <Style x:Key="BasePlayerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="64" />
            <Setter Property="Height" Value="64" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <Style x:Key="BaseActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="4" />
        </Style>
        <Style x:Key="ActionSelectableButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DarkGrey}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Grey}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Action: Cannot be selected -->
        <Style x:Key="ActionDisabledButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DisabledColor}"/>
        </Style>

        <!-- Action: Selected Made -->
        <Style x:Key="ActionSelectedMadeStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SelectedMadeColor}"/>
        </Style>

        <!-- Action: Selected Missed, Foul, Turnover -->
        <Style x:Key="ActionSelectedFailedStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SelectedMissedColor}"/>
        </Style>
        <!-- Court Player: Not Selectable -->
        <Style x:Key="CourtPlayerDisabledStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <!--<Setter Property="Background" Value="{Binding TeamColorDimmed}" />-->
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Court Player: Selectable (Team-colored) -->
        <Style x:Key="CourtPlayerSelectableStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{Binding TeamColor}" />
            <!-- via VM -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                    <!-- hover effect -->
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Bench Player: Not Selectable -->
        <Style x:Key="BenchPlayerDisabledStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="Foreground" Value="DarkGray"/>
        </Style>

        <!-- Bench Player: Selectable -->
        <Style x:Key="BenchPlayerSelectableStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{Binding TeamColor}" />
            <!-- via VM -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverGrey}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style x:Key="BenchPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource BenchColor}"/>
        </Style>
        <Style x:Key="CourtAPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource CourtAColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="BenchAPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource CourtAColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CourtAColor}"/>
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style x:Key="BenchBPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource CourtBColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CourtBColor}"/>
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style x:Key="CourtBPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource CourtBColor}"/>
        </Style>
        <Style x:Key="BenchButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        </Style>

        <Style x:Key="Made" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">

        </Style>
        <Style x:Key="Missed" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">

        </Style>
        <Style x:Key="Sub" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
        </Style>
        <Style x:Key="Foul" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">

        </Style>
        <Style x:Key="Turnover" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
        </Style>
        <Style x:Key="JumpBall" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
        </Style>
        <Style x:Key="TimeOut" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
        </Style>

        <Style x:Key="SubButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <!-- TEAM A REBOUND BUTTON -->
        <Style x:Key="TeamAReboundStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource CourtAColor}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="60" />
        </Style>

        <!-- TEAM B REBOUND BUTTON -->
        <Style x:Key="TeamBReboundStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource CourtBColor}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="60" />
        </Style>

        <!-- BLOCK BUTTON -->
        <Style x:Key="BlockStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="40" />
        </Style>

        <!-- SHOT CLOCK VIOLATION BUTTON -->
        <Style x:Key="ShotClockStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
        </Style>

        <!-- FOUL TYPE BUTTON -->
        <Style x:Key="FoulTypeButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <converters:IsTeamAToCourtStyleConverter x:Key="CourtPlayerStyleConverter"
                                     TeamAStyle="{StaticResource CourtAPlayerButtonStyle}"
                                     TeamBStyle="{StaticResource CourtBPlayerButtonStyle}" />

        <converters:IsTeamAToBenchStyleConverter x:Key="BenchPlayerStyleConverter"
                                     TeamAStyle="{StaticResource BenchAPlayerButtonStyle}"
                                     TeamBStyle="{StaticResource BenchBPlayerButtonStyle}" />
    </Window.Resources>
    
    <Window.InputBindings>
        <!-- Action: MADE (M) -->
            <KeyBinding Key="Q" Modifiers="Shift"
                Command="{Binding SelectActionCommand}"
                CommandParameter="MADE" />

            <!-- Action: MISSED (X) -->
            <KeyBinding Key="W" Modifiers="Shift"
                Command="{Binding SelectActionCommand}"
                CommandParameter="MISSED" />

            <!-- Action: FOUL (F) -->
            <KeyBinding Key="E" Modifiers="Shift"
                Command="{Binding SelectActionCommand}"
                CommandParameter="FOUL" />

            <!-- Action: TURNOVER (T) -->
        <KeyBinding Key="R" Modifiers="Shift"
                Command="{Binding SelectActionCommand}"
                CommandParameter="TURNOVER" />
    </Window.InputBindings>

    <Grid x:Name="___No_Name_" Background="#F9F9F9">
        <!-- Layout: Header, Event Buttons, Main Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>

        <!-- ========= Row 0: Team Cards & Clock ========= -->

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,10,10,10" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Team Card -->
            <Border Background="White" BorderBrush="#888" CornerRadius="5"  BorderThickness="2" Padding="10">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Fill="Orange" RadiusX="4" RadiusY="4"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="Team A" FontWeight="Bold" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0"/>
                    <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Border Background="#EEE" CornerRadius="3" Padding="4" Margin="4,0,4,0">
                                <TextBlock Text="3/3" FontSize="20" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0">
                            <Ellipse x:Name="First" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Second" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Thirt" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Fourth" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Fifth" Width="12" Height="12" Fill="Gray" Margin="2" />
                        </StackPanel>
                    </Grid>
                    <Border Grid.RowSpan="2" Grid.Column="2" BorderBrush="#888" CornerRadius="0"  BorderThickness="1,0,0,0">
                        <TextBlock Text="199" FontSize="52" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Clock Card -->
            <controls:GameClock Grid.Column="1"/>

            <!-- Right Team Card -->
            <Border Grid.Column="2" Background="White" BorderBrush="#888" CornerRadius="5" BorderThickness="2" Padding="10">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.RowSpan="2" Grid.Column="0" BorderBrush="#888" CornerRadius="0" BorderThickness="0,0,1,0">
                        <TextBlock Text="199" FontSize="52" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Text="Team B" FontWeight="Bold" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                    <Rectangle Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Fill="Green" RadiusX="4" RadiusY="4"/>

                    <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Border Background="#EEE" CornerRadius="3" Padding="4" Margin="4,0,4,0">
                                <TextBlock Text="3/3" FontSize="20" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="550"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Row 2: Court (28×15) -->
            <Grid Grid.Column="1" Grid.Row="1" Height="520">
                <!-- Base Court Control -->
                <controls:Court x:Name="CourtControl"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" />

                <!-- Overlay for Assist Selection -->
                <Grid Visibility="{Binding NoAssistButtonVisibility}"
      Background="#ccFFFFFF"
      Panel.ZIndex="10">
                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Width="Auto"
                MaxWidth="1000">

                        <!-- COURT PLAYERS -->
                        <TextBlock Text="COURT PLAYERS"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0 0 0 10"
                   HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding EligibleCourtAssistPlayers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}"
                            Style="{Binding IsTeamA, Converter={StaticResource CourtPlayerStyleConverter}}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- NO ASSIST -->
                        <Button Content="NO ASSIST"
                Command="{Binding NoAssistCommand}"
                HorizontalAlignment="Center"
                Padding="40,20"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="1"
                Margin="20" />

                        <!-- BENCH PLAYERS -->
                        <TextBlock Text="BENCH PLAYERS"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="20 10 0 10"
                   HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding EligibleBenchAssistPlayers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}"
                            Style="{Binding IsTeamA, Converter={StaticResource BenchPlayerStyleConverter}}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
                <Grid Visibility="{Binding ReboundPanelVisibility}"
      Background="#ccFFFFFF"
      Panel.ZIndex="10"
      Margin="20">
                    <Grid HorizontalAlignment="Center"
                          >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <!-- Team A Bench -->
                            <ColumnDefinition Width="80"/>
                            <!-- Team A Court -->
                            <ColumnDefinition Width="200"/>
                            <!-- Center Buttons -->
                            <ColumnDefinition Width="80"/>
                            <!-- Team B Court -->
                            <ColumnDefinition Width="80"/>
                            <!-- Team B Bench -->
                        </Grid.ColumnDefinitions>

                        <!-- TEAM A BENCH -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ItemsControl ItemsSource="{Binding EligibleTeamABenchReboundPlayers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
Style="{StaticResource BenchAPlayerButtonStyle}"
Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- TEAM A COURT -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ItemsControl ItemsSource="{Binding EligibleTeamACourtReboundPlayers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
Style="{StaticResource CourtAPlayerButtonStyle}"
Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- CENTER REBOUND BUTTONS -->
                        <StackPanel Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White">
                            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 0 0 10">
                                <Button Content="Team A"
        Command="{Binding ReboundTeamACommand}"
        Style="{StaticResource TeamAReboundStyle}" />

                                <Button Content="Team B"
        Command="{Binding ReboundTeamBCommand}"
        Style="{StaticResource TeamBReboundStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                                <Button Content="Block" Command="{Binding BlockCommand}" Style="{StaticResource BlockStyle}" />
                                <Button Content="24" Command="{Binding ShotClockCommand}" Style="{StaticResource ShotClockStyle}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- TEAM B COURT -->
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ItemsControl ItemsSource="{Binding EligibleTeamBCourtReboundPlayers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
Style="{StaticResource CourtBPlayerButtonStyle}"
Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- TEAM B BENCH -->
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ItemsControl ItemsSource="{Binding EligibleTeamBBenchReboundPlayers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
Style="{StaticResource BenchBPlayerButtonStyle}"
Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Visibility="{Binding BlockerSelectionVisibility}"
      Background="#ccFFFFFF"
      Panel.ZIndex="10"
      Margin="20">

                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Width="Auto"
                MaxWidth="1000">

                        <!-- COURT PLAYERS -->
                        <TextBlock Text="COURT PLAYERS"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0 0 0 10"
                   HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding EligibleBlockCourtPlayers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}"
                            Style="{Binding IsTeamA, Converter={StaticResource CourtPlayerStyleConverter}}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- BENCH PLAYERS -->
                        <TextBlock Text="BENCH PLAYERS"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="20 10 0 10"
                   HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding EligibleBlockBenchPlayers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}"
                            Style="{Binding IsTeamA, Converter={StaticResource BenchPlayerStyleConverter}}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
                
                <Grid Visibility="{Binding TurnoverPanelVisibility}"
      Background="#33FFFFFF"
      Panel.ZIndex="10">

                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White">
                        <TextBlock Text="Select Team for Turnover"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Team A"
                    Command="{Binding TurnoverTeamACommand}"
                    Margin="5"/>
                            <Button Content="Team B"
                    Command="{Binding TurnoverTeamBCommand}"
                    Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid Visibility="{Binding StealPanelVisibility}"
      Background="#33FFFFFF"
      Panel.ZIndex="10">

                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White">
                        <TextBlock Text="Award Steal?"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>

                        <Button Content="NO STEAL"
                Command="{Binding NoStealCommand}"
                HorizontalAlignment="Center"
                Padding="10"
                Margin="10"/>
                    </StackPanel>
                </Grid>
                <Grid Visibility="{Binding FoulTypePanelVisibility}" Background="#ccFFFFFF" Panel.ZIndex="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                        <TextBlock Text="Select Foul Type" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                        <WrapPanel HorizontalAlignment="Center">
                            <Button Style="{StaticResource FoulTypeButtonStyle}" Content="Personal" Command="{Binding SelectFoulTypeCommand}" CommandParameter="personal" Margin="5"/>
                            <Button Style="{StaticResource FoulTypeButtonStyle}" Content="Unsportsmanlike" Command="{Binding SelectFoulTypeCommand}" CommandParameter="unsportsmanlike" Margin="5"/>
                            <Button Style="{StaticResource FoulTypeButtonStyle}" Content="Double Personal" Command="{Binding SelectFoulTypeCommand}" CommandParameter="double personal" Margin="5"/>
                            <Button Style="{StaticResource FoulTypeButtonStyle}" Content="Offensive" Command="{Binding SelectFoulTypeCommand}" CommandParameter="offensive" Margin="5"/>
                            <Button Style="{StaticResource FoulTypeButtonStyle}" Content="Disqualifying" Command="{Binding SelectFoulTypeCommand}" CommandParameter="disqualifying" Margin="5"/>
                            <Button Style="{StaticResource FoulTypeButtonStyle}" Content="Technical" Command="{Binding SelectFoulTypeCommand}" CommandParameter="technical" Margin="5"/>
                        </WrapPanel>
                    </StackPanel>
                </Grid>
                <Grid Visibility="{Binding FreeThrowPanelVisibility}" Background="#ccFFFFFF" Panel.ZIndex="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                        <TextBlock Text="How many free throws?" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                        <WrapPanel HorizontalAlignment="Center">
                            <Button Content="0" Command="{Binding SelectFreeThrowCountCommand}" CommandParameter="0" Margin="5"/>
                            <Button Content="1" Command="{Binding SelectFreeThrowCountCommand}" CommandParameter="1" Margin="5"/>
                            <Button Content="2" Command="{Binding SelectFreeThrowCountCommand}" CommandParameter="2" Margin="5"/>
                            <Button Content="3" Command="{Binding SelectFreeThrowCountCommand}" CommandParameter="3" Margin="5"/>
                        </WrapPanel>
                    </StackPanel>
                </Grid>
                <Grid Visibility="{Binding IsFouledPlayerSelectionActive, Converter={StaticResource BooleanToVisibilityConverter}}"
      Background="#33FFFFFF"
      Panel.ZIndex="10">
                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Opacity="0.95">
                        <TextBlock Text="Who was fouled?"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>
                        <TextBlock Text="(Select from opposing team)"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0 0 0 10"/>
                    </StackPanel>
                </Grid>
                <Grid Visibility="{Binding FreeThrowResultPanelVisibility}" Background="#ccFFFFFF" Panel.ZIndex="10">
                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Width="340"
                Opacity="0.95">
                        <TextBlock Text="Free Throw Results"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

                        <ItemsControl ItemsSource="{Binding FreeThrowResultRows}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0 10">
                                        <TextBlock Text="{Binding Label}" FontWeight="Bold" Margin="0 0 0 6"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="MADE"
                                    Command="{Binding SelectResultCommand}"
                                    CommandParameter="MADE"
                                    Background="{Binding MadeButtonBackground}"
                                    Margin="6"/>
                                            <Button Content="MISSED"
                                    Command="{Binding SelectResultCommand}"
                                    CommandParameter="MISSED"
                                    Background="{Binding MissedButtonBackground}"
                                    Margin="6"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
                <!-- Substitution Panel -->
                <Grid Visibility="{Binding SubstitutionPanelVisibility}" Background="#ccFFFFFF" Panel.ZIndex="10">
                    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Opacity="0.95"
                Width="Auto">

                        <TextBlock Text="Substitution Panel"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <!-- Team A Bench -->
                            <ItemsControl Grid.Column="0" ItemsSource="{Binding TeamABenchPlayers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Team A Sub In -->
                            <ItemsControl Grid.Column="1" ItemsSource="{Binding TeamASubIn}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Team A Sub Out -->
                            <ItemsControl Grid.Column="2" ItemsSource="{Binding TeamASubOut}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Team A Court -->
                            <ItemsControl Grid.Column="3" ItemsSource="{Binding TeamACourtPlayers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Team B Court -->
                            <ItemsControl Grid.Column="4" ItemsSource="{Binding TeamBCourtPlayers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Team B Sub Out -->
                            <ItemsControl Grid.Column="5" ItemsSource="{Binding TeamBSubOut}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Team B Sub In -->
                            <ItemsControl Grid.Column="6" ItemsSource="{Binding TeamBSubIn}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Team B Bench -->
                            <ItemsControl Grid.Column="7" ItemsSource="{Binding TeamBBenchPlayers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>

                        <!-- Confirm Button -->
                        <Button Content="CONFIRM SUBSTITUTIONS"
                Margin="20"
                Padding="10,6"
                FontSize="16"
                FontWeight="Bold"
                Background="DarkGreen"
                Foreground="White"
                Command="{Binding ConfirmSubstitutionCommand}"
                IsEnabled="{Binding IsSubstitutionConfirmEnabled}"/>
                    </StackPanel>
                </Grid>


            </Grid>

            <Grid Background="White" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Button Content="MADE (Q)"
        Style="{Binding MadeButtonStyle}"
        Command="{Binding SelectActionCommand}"
        CommandParameter="MADE"
        IsEnabled="{Binding IsActionSelectionActive}"
        Grid.Column="1" />
                <!--  <Button Style="{StaticResource Missed}" Content="MISSED" Grid.Column="2"/>-->
                <Button Content="MISSED (W)"
        Style="{Binding MissedButtonStyle}"
        Command="{Binding SelectActionCommand}"
        CommandParameter="Missed"
        IsEnabled="{Binding IsActionSelectionActive}"
        Grid.Column="2" />
                <!--  <Button Style="{StaticResource Foul}" Content="FOUL" Grid.Column="3" />-->
                <Button Content="FOUL (E)"
Style="{Binding FoulButtonStyle}"
Command="{Binding SelectActionCommand}"
CommandParameter="Foul"
IsEnabled="{Binding IsActionSelectionActive}"
Grid.Column="3" />
                <!--  <Button Style="{StaticResource Turnover}" Content="TURNOVER" Grid.Column="4"/>-->
                <Button Content="TURNOVER (R)"
Style="{Binding TurnoverButtonStyle}"
Command="{Binding SelectActionCommand}"
CommandParameter="TURNOVER"
IsEnabled="{Binding IsActionSelectionActive}"
Grid.Column="4" />


            </Grid>
            <Border Grid.Column="0" Grid.Row="1" BorderThickness="2" BorderBrush="#888" VerticalAlignment="Stretch" HorizontalAlignment="Right">
                <ItemsControl ItemsSource="{Binding TeamAPlayers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid VerticalAlignment="Center" x:Name="PlayerGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <!-- KEY: Apply attached properties to the ITEM CONTAINER, not the DataTemplate -->
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Row" Value="{Binding Row}" />
                            <Setter Property="Grid.Column" Value="{Binding Column}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayName}"
        Style="{Binding ButtonStyle}"
        Command="{Binding SelectPlayerCommand}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <Border Grid.Column="2" Grid.Row="1" BorderThickness="2" BorderBrush="#888" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <ItemsControl ItemsSource="{Binding TeamBPlayers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Row" Value="{Binding Row}" />
                            <Setter Property="Grid.Column" Value="{Binding Column}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayName}"
        Style="{Binding ButtonStyle}"
        Command="{Binding SelectPlayerCommand}"/>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <Grid  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="top" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource JumpBall}" Content="JUMP BALL" />
                <Button Grid.Column="1"
            Style="{StaticResource Sub}"
            Content="SUB"
            Command="{Binding StartSubstitutionCommand}" />
                <Button Grid.Column="2" Style="{StaticResource TimeOut}" Content="TIME OUT" />

            </Grid>
        </Grid>
        <!-- Play‐by‐Play Log -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="5" Background="#F9F9F9" BorderBrush="LightGray" BorderThickness="2">

        </Border>
    </Grid>
</Window>
