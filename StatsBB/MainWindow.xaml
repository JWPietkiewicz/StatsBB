                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Team A Sub In -->
                                    <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="380" Margin="2">
                                        <ItemsControl ItemsSource="{Binding TeamASubIn}"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Team A Sub Out -->
                                    <Border Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="380" Margin="2">
                                        <ItemsControl ItemsSource="{Binding TeamASubOut}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>
                                    <!-- Team A Court -->
                                    <Border Grid.Row="1" Grid.Column="3" Background="#cceeeeee" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="380" Margin="2">
                                        <ItemsControl ItemsSource="{Binding TeamACourtPlayers}"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtAPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>
                                    <WrapPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <!-- Confirm Button -->
                                        <Button Content="OK" Width="60" Height="60" FontSize="16" FontWeight="Bold" Background="DarkGreen" Foreground="White" Command="{Binding ConfirmSubstitutionCommand}" IsEnabled="{Binding IsSubstitutionConfirmEnabled}"/>
                                    </WrapPanel>

                                    <!-- Team B Court -->
                                    <Border Grid.Row="1" Grid.Column="5" Background="#cceeeeee" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="380" Margin="2">
                                        <ItemsControl ItemsSource="{Binding TeamBCourtPlayers}"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>
                                    <!-- Team B Sub Out -->
                                    <Border Grid.Row="1" Grid.Column="6"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="380" Margin="2">
                                        <ItemsControl ItemsSource="{Binding TeamBSubOut}"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"  Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubOutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Team B Sub In -->
                                    <Border Grid.Row="1" Grid.Column="7"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="380" Margin="2">
                                        <ItemsControl ItemsSource="{Binding TeamBSubIn}"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Team B Bench -->
                                    <Border Grid.Row="1" Grid.Column="8" Background="#ccd3d3d3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="380" Margin="2">

                                        <ItemsControl ItemsSource="{Binding TeamBBenchPlayers}"  VerticalAlignment="Center" Margin="5 0 0 0">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="LeftToRight" Height="360" HorizontalAlignment="Left"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                                Style="{StaticResource CourtBPlayerButtonStyle}"
                                Command="{Binding DataContext.ToggleSubInCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Sub Out All Buttons -->
                                    <Button Grid.Row="2" Grid.Column="2" Content="5 OUT" Style="{StaticResource BlockStyle}" Command="{Binding SubOutAllTeamACommand}"/>
                                    <Button Grid.Row="2" Grid.Column="6" Content="5 OUT" Style="{StaticResource BlockStyle}" Command="{Binding SubOutAllTeamBCommand}"/>
                                </Grid>
                            </StackPanel>
                        </Grid>


                    </Grid>

                    <!-- Team A Color Indicator -->
                    <Border Grid.Column="0" Grid.Row="0" Width="20" VerticalAlignment="Stretch" 
                            HorizontalAlignment="Right" Margin="10,0,0,0"
                            Background="{Binding TeamAColor}" 
                            CornerRadius="10,0,0,10"
                            ToolTip="{Binding TeamAName}">
                        <Border.Effect>
                            <DropShadowEffect Color="{Binding TeamAColor}" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    
                    <!-- Team B Color Indicator -->
                    <Border Grid.Column="2" Grid.Row="0" Width="20" VerticalAlignment="Stretch" 
                            HorizontalAlignment="Left" Margin="0,0,10,0"
                            Background="{Binding TeamBColor}" 
                            CornerRadius="0,10,10,0"
                            ToolTip="{Binding TeamBName}">
                        <Border.Effect>
                            <DropShadowEffect Color="{Binding TeamBColor}" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,10">
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5" MaxWidth="1000">
                            <Button Content="MADE" Style="{StaticResource Made}" Command="{Binding SelectActionCommand}" CommandParameter="MADE" IsEnabled="{Binding IsActionSelectionActive}"/>
                            <Button Content="MISSED" Style="{StaticResource Missed}" Command="{Binding SelectActionCommand}" CommandParameter="Missed" IsEnabled="{Binding IsActionSelectionActive}"/>
                            <Button Content="FOUL (F)" Style="{StaticResource Foul}" Command="{Binding SelectActionCommand}" CommandParameter="Foul"/>
                            <Button Content="TURNOVER (T)" Style="{StaticResource Turnover}" Command="{Binding StartTurnoverCommand}"/>
                            <Button Content="TIME OUT (C)" Style="{StaticResource TimeOut}" Command="{Binding StartTimeoutCommand}"/>
                            <Button Content="JUMP BALL (B)" Style="{StaticResource JumpBall}" Command="{Binding StartJumpBallCommand}"/>
                            <Button Content="SUBSTITUTIONS (S)" Style="{StaticResource Sub}" Command="{Binding StartSubstitutionCommand}"/>
                            <Button Content="S5" Style="{StaticResource Sub}" Command="{Binding StartStartingFiveCommand}" IsEnabled="{Binding IsStartingFiveButtonEnabled}"/>
                            <Button Content="FREE THROWS (V)" Style="{StaticResource FreeThrows}" Command="{Binding StartFreeThrowsCommand}"/>
                            <Button Content="ASSIST (A)" Style="{StaticResource Assist}" Command="{Binding StartAssistCommand}"/>
                            <Button Content="REBOUND (R)" Style="{StaticResource Rebound}" Command="{Binding StartReboundCommand}"/>
                            <Button Content="STEAL (S)" Style="{StaticResource Steal}" Command="{Binding StartStealCommand}"/>
                        </WrapPanel>
                    </StackPanel>
                </Grid>
                <!-- Play‐by‐Play Log -->
                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="5" Background="{StaticResource SystemSurfaceColor}" BorderBrush="{StaticResource SystemBorderColor}" BorderThickness="1" CornerRadius="8">
                    <controls:PlayByPlayLog DataContext="{Binding PlayLog}" />
                </Border>
            </Grid>
            </TabItem>
            <TabItem IsEnabled="{Binding AreTeamsConfirmed}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE9D9;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Statistics"/>
                    </StackPanel>
                </TabItem.Header>
                <controls:StatsView DataContext="{Binding StatsVM}" />
            </TabItem>
            <TabItem IsEnabled="{Binding AreTeamsConfirmed}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE8F3;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Play Log"/>
                    </StackPanel>
                </TabItem.Header>
                <controls:PlayByPlayList DataContext="{Binding PlayLog}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
