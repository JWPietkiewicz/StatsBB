<Window x:Class="StatsBB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:StatsBB.UserControls" 
        xmlns:viewmodel="clr-namespace:StatsBB.ViewModel" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:converters="clr-namespace:StatsBB.Converters"
        xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        Title="Basketball Stats Map" Height="1080" Width="1920"
        PreviewKeyDown="Window_PreviewKeyDown">
    

    <Window.InputBindings>
        <!-- Action: MADE (M) -->
        <KeyBinding Key="Q" Modifiers="Ctrl"
                Command="{Binding SelectActionCommand}"
                CommandParameter="MADE" />

        <!-- Action: MISSED (X) -->
        <KeyBinding Key="W" Modifiers="Ctrl"
                Command="{Binding SelectActionCommand}"
                CommandParameter="MISSED" />

        <!-- Action: FOUL (F) -->
        <KeyBinding Key="F" Modifiers="Ctrl"
                Command="{Binding SelectActionCommand}"
                CommandParameter="FOUL" />

        <!-- Turnover Selection (T) -->
        <KeyBinding Key="T" Modifiers="Ctrl"
                Command="{Binding StartTurnoverCommand}" />

        <!-- Timeout (C) -->
        <KeyBinding Key="C" Modifiers="Ctrl"
                Command="{Binding StartTimeoutCommand}" />

        <!-- Jump Ball (B) -->
        <KeyBinding Key="B" Modifiers="Ctrl"
                Command="{Binding StartJumpBallCommand}" />

        <!-- Substitutions (S) -->
        <KeyBinding Key="S" Modifiers="Ctrl"
                Command="{Binding StartSubstitutionCommand}" />

        <!-- Free Throws (V) -->
        <KeyBinding Key="V" Modifiers="Ctrl"
                Command="{Binding StartFreeThrowsCommand}" />

        <!-- Assist (A) -->
        <KeyBinding Key="A" Modifiers="Ctrl"
                Command="{Binding StartAssistCommand}" />

        <!-- Rebound (R) -->
        <KeyBinding Key="R" Modifiers="Ctrl"
                Command="{Binding StartReboundCommand}" />

        <!-- Steal (S) -->
        <KeyBinding Key="S" Modifiers="Ctrl"
                Command="{Binding StartStealCommand}" />
    </Window.InputBindings>

    <TabControl SelectedIndex="{Binding SelectedTabIndex}">
        <TabItem Header="TEAM INFO" IsEnabled="{Binding IsTeamInfoEnabled}">

            <controls:TeamInfoView DataContext="{Binding TeamInfoVM}" />
        </TabItem>
        <TabItem Header="MAIN" IsEnabled="{Binding IsMainTabEnabled}">
            <Grid x:Name="___No_Name_" Background="#F9F9F9">
                <!-- Layout: Header, Event Buttons, Main Content -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="340"/>
                </Grid.ColumnDefinitions>

                <!-- ========= Row 0: Team Cards & Clock ========= -->

                <controls:ScoreBoardView Grid.Row="0" Grid.Column="0"
                                         DataContext="{Binding ScoreBoardVM}" />


                <Grid Grid.Row="1" Grid.Column="0" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="600"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Row 2: Court (28×15) -->
                    <Grid Grid.Column="1" Grid.Row="0">
                        <!-- Base Court Control -->
                        <controls:Court x:Name="CourtControl"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" />

                        <!-- Game Setup Panel -->
                        <Grid Visibility="{Binding GamePanelVisibility}" Background="#ccFFFFFF" Panel.ZIndex="10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="SETUP GAME" FontSize="24" FontWeight="Bold" Padding="20"
                                        Command="{Binding SetupGameCommand}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Quick Shot Panel -->
                        <Grid Visibility="{Binding QuickShotPanelVisibility}"
      Background="#ccFFFFFF"
      Panel.ZIndex="10">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="380">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>

                                <!-- TEAM A BENCH -->
                                <Border Background="#ccd3d3d3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamABenchShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM A COURT -->
                                <Border Background="#cceeeeee" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamACourtShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM B COURT -->
                                <Border Background="#cceeeeee" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBCourtShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM B BENCH -->
                                <Border Background="#ccd3d3d3" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBBenchShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Assist Team Selection -->
                        <Grid Visibility="{Binding AssistTeamPanelVisibility}" Background="#33FFFFFF" Panel.ZIndex="10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                                <TextBlock Text="SELECT TEAM" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0">
                                        <Button Content="{Binding TeamAName}" Command="{Binding AssistTeamACommand}" Margin="5"/>
                                    </Border>
                                    <Border Grid.Column="1">
                                        <Button Content="{Binding TeamBName}" Command="{Binding AssistTeamBCommand}" Margin="5"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <!-- Assist Panel -->
                        <Grid Visibility="{Binding NoAssistButtonVisibility}"
      Panel.ZIndex="10" Background="#ccFFFFFF">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

                                <!-- COURT PLAYERS -->
                                <Border Padding="10" Background="#cceeeeee" BorderThickness="1" BorderBrush="Black" Width="380">
                                    <ItemsControl ItemsSource="{Binding EligibleCourtAssistPlayers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding DisplayName}"
                           
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>

                                <!-- NO ASSIST -->
                                <Border>
                                    <Button Content="NO ASSIST"
                Command="{Binding NoAssistCommand}"
                HorizontalAlignment="Center"
                Height="60"
                Width="380"
                FontSize="24"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="1"
                Margin="10" />
                                </Border>
                                <!-- BENCH PLAYERS -->
                                <Border Background="#ccd3d3d3" Padding="10" BorderThickness="1" BorderBrush="Black" Width="380">
                                    <ItemsControl ItemsSource="{Binding EligibleBenchAssistPlayers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" Width="360"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding DisplayName}"
                           
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </StackPanel>
                        </Grid>
                        <!-- Rebound Panel -->
                        <Grid Visibility="{Binding ReboundPanelVisibility}"
      Background="#ccFFFFFF"
      Panel.ZIndex="10" Height="500" Width="900">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="500">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <!-- Team A Bench -->
                                    <ColumnDefinition Width="100"/>
                                    <!-- Team A Court -->
                                    <ColumnDefinition Width="100"/>
                                    <!-- Team B Court -->
                                    <ColumnDefinition Width="160"/>
                                    <!-- Team B Bench -->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="380"/>
                                    <RowDefinition Height="60"/>
                                </Grid.RowDefinitions>

                                <!-- TEAM A BENCH -->
                                <Border Background="#ccd3d3d3" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamABenchReboundPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM A COURT -->
                                <Border Background="#cceeeeee" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamACourtReboundPlayers}" Height="360">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Button Content="{Binding TeamAName}"
Command="{Binding ReboundTeamACommand}"
/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
                                    <Button Content="{Binding TeamBName}"
Command="{Binding ReboundTeamBCommand}"
/>
                                </Border>
                                <!-- CENTER REBOUND BUTTONS -->
                                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right">
                                    <Button Content="Block" Command="{Binding BlockCommand}" Width="100" Height="50"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                                    <Button Content="24" Command="{Binding ShotClockCommand}" Width="100" Height="50"/>
                                </Border>
                                <!-- TEAM B COURT -->
                                <Border Background="#cceeeeee" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBCourtReboundPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM B BENCH -->
                                <Border Background="#ccd3d3d3" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBBenchReboundPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

Command="{Binding SelectPlayerCommand}"
Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <Grid Visibility="{Binding ReboundTypePanelVisibility}" Background="#ccFFFFFF" Panel.ZIndex="10" Width="400" Height="200">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="TYPE OF REBOUND" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
                                <WrapPanel HorizontalAlignment="Center">
                                    <Button Content="OFFENSIVE" Command="{Binding SelectReboundTypeCommand}" CommandParameter="offensive"/>
                                    <Button Content="DEFENSIVE" Command="{Binding SelectReboundTypeCommand}" CommandParameter="defensive"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>

                        <Grid Visibility="{Binding BlockerSelectionVisibility}"
      Background="#ccFFFFFF"
      Panel.ZIndex="10">

                            <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                <!-- COURT PLAYERS -->
                                <Border Background="#cceeeeee" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2" BorderThickness="1" BorderBrush="Black">
                                    <ItemsControl ItemsSource="{Binding EligibleBlockCourtPlayers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" Width="360"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding DisplayName}"
                           
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                                <!-- BENCH PLAYERS -->
                                <Border Background="#ccd3d3d3" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2" BorderThickness="1" BorderBrush="Black">
                                    <ItemsControl ItemsSource="{Binding EligibleBlockBenchPlayers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" Width="360"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding DisplayName}"
                           
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <Grid Visibility="{Binding TurnoverPanelVisibility}"
      Background="#ccFFFFFF"
      Panel.ZIndex="10" Height="500" Width="900">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                    <RowDefinition Height="380" />
                                    <RowDefinition Height="60" />
                                </Grid.RowDefinitions>

                                <!-- TEAM A BENCH -->
                                <Border Background="#ccd3d3d3" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamABenchTurnoverPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM A COURT -->
                                <Border Background="#cceeeeee" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamACourtTurnoverPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Button Content="{Binding TeamAName}" Command="{Binding TurnoverTeamACommand}" />
                                </Border>
                                <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
                                    <Button Content="{Binding TeamBName}" Command="{Binding TurnoverTeamBCommand}" />
                                </Border>

                                <!-- TEAM B COURT -->
                                <Border Background="#cceeeeee" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBCourtTurnoverPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM B BENCH -->
                                <Border Background="#ccd3d3d3" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBBenchTurnoverPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                        <Grid Visibility="{Binding StealTeamPanelVisibility}" Background="#33FFFFFF" Panel.ZIndex="10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                                <TextBlock Text="SELECT TEAM" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0">
                                        <Button Content="{Binding TeamAName}" Command="{Binding StealTeamACommand}" Margin="5"/>
                                    </Border>
                                    <Border Grid.Column="1">
                                        <Button Content="{Binding TeamBName}" Command="{Binding StealTeamBCommand}" Margin="5"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        <Grid Visibility="{Binding StealPanelVisibility}"
      Background="#33FFFFFF"
      Panel.ZIndex="10" Width="400">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- COURT PLAYERS -->
                                <Border Padding="10" Background="#cceeeeee" BorderThickness="1" BorderBrush="Black" Width="380">
                                    <ItemsControl ItemsSource="{Binding EligibleStealCourtPlayers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" Width="360"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding DisplayName}"
                           
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>

                                <!-- NO STEAL -->
                                <Border>
                                    <Button Content="NO STEAL"
                Command="{Binding NoStealCommand}"
                HorizontalAlignment="Center"
                Height="60"
          Width="380"
          FontSize="24"
          FontWeight="Bold"
          Background="White"
          Foreground="Black"
          BorderBrush="Black"
          BorderThickness="1"
          Margin="10" />
                                </Border>

                                <!-- BENCH PLAYERS -->
                                <Border Background="#ccd3d3d3" Padding="10" BorderThickness="1" BorderBrush="Black" Width="380">
                                    <ItemsControl ItemsSource="{Binding EligibleStealBenchPlayers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" Width="360"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding DisplayName}"
                           
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </StackPanel>
                        </Grid>
                        <Grid Visibility="{Binding FoulCommiterPanelVisibility}" Background="#ccFFFFFF" Panel.ZIndex="10" Height="500" Width="900">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="500">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="380"/>
                                    <RowDefinition Height="60"/>
                                </Grid.RowDefinitions>

                                <Border Background="#ccd3d3d3" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamABenchFoulCommitterPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"

                                                    Command="{Binding SelectPlayerCommand}"
                                                    Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <Border Background="#cceeeeee" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="Black">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamACourtFoulCommitterPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"  Height="360"/>
                                                </ItemsPanelTemplate>
