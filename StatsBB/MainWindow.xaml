<Window x:Class="StatsBB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:StatsBB.UserControls" xmlns:viewmodel="clr-namespace:StatsBB.ViewModel" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Basketball Stats Map" Height="1080" Width="1920">
    <Window.Resources>
        <SolidColorBrush x:Key="CourtAColor" Color="Orange"/>
        <SolidColorBrush x:Key="CourtBColor" Color="Green"/>
        <SolidColorBrush x:Key="BenchColor" Color="LightGray"/>
        <SolidColorBrush x:Key="DisabledColor" Color="LightGray"/>
        <SolidColorBrush x:Key="HoverGrey" Color="#D3D3D3"/>
        <SolidColorBrush x:Key="SelectedMadeColor" Color="Green"/>
        <SolidColorBrush x:Key="SelectedMissedColor" Color="Red"/>
        <SolidColorBrush x:Key="DarkGrey" Color="DarkGray"/>
        <SolidColorBrush x:Key="Grey" Color="Gray"/>

        <Style x:Key="BasePlayerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="64" />
            <Setter Property="Height" Value="64" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <Style x:Key="BaseActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="4" />
        </Style>
        <Style x:Key="ActionSelectableButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DarkGrey}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Grey}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Action: Cannot be selected -->
        <Style x:Key="ActionDisabledButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DisabledColor}"/>
        </Style>

        <!-- Action: Selected Made -->
        <Style x:Key="ActionSelectedMadeStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SelectedMadeColor}"/>
        </Style>

        <!-- Action: Selected Missed, Foul, Turnover -->
        <Style x:Key="ActionSelectedFailedStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SelectedMissedColor}"/>
        </Style>
        <!-- Court Player: Not Selectable -->
        <Style x:Key="CourtPlayerDisabledStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <!--<Setter Property="Background" Value="{Binding TeamColorDimmed}" />-->
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Court Player: Selectable (Team-colored) -->
        <Style x:Key="CourtPlayerSelectableStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{Binding TeamColor}" />
            <!-- via VM -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                    <!-- hover effect -->
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Bench Player: Not Selectable -->
        <Style x:Key="BenchPlayerDisabledStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="Foreground" Value="DarkGray"/>
        </Style>

        <!-- Bench Player: Selectable -->
        <Style x:Key="BenchPlayerSelectableStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{Binding TeamColor}" />
            <!-- via VM -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverGrey}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
        
        <Style x:Key="BenchPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource BenchColor}"/>
        </Style>
        <Style x:Key="CourtAPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource CourtAColor}"/>
        </Style>
        <Style x:Key="CourtBPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="{StaticResource CourtBColor}"/>
        </Style>
        <Style x:Key="BenchButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        </Style>
        
            <Style x:Key="Made" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">

            </Style>
            <Style x:Key="Missed" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">

            </Style>
            <Style x:Key="Sub" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            </Style>
            <Style x:Key="Foul" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">

            </Style>
            <Style x:Key="Turnover" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            </Style>
            <Style x:Key="JumpBall" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            </Style>
            <Style x:Key="TimeOut" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            </Style>
    </Window.Resources>

    <Grid x:Name="___No_Name_" Background="#F9F9F9">
        <!-- Layout: Header, Event Buttons, Main Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>

        <!-- ========= Row 0: Team Cards & Clock ========= -->

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,10,10,10" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Team Card -->
            <Border Background="White" BorderBrush="#888" CornerRadius="5"  BorderThickness="2" Padding="10">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Fill="Orange" RadiusX="4" RadiusY="4"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="Team A" FontWeight="Bold" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0"/>
                    <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Border Background="#EEE" CornerRadius="3" Padding="4" Margin="4,0,4,0">
                                <TextBlock Text="3/3" FontSize="20" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0">
                            <Ellipse x:Name="First" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Second" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Thirt" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Fourth" Width="12" Height="12" Fill="Gray" Margin="2" />
                            <Ellipse x:Name="Fifth" Width="12" Height="12" Fill="Gray" Margin="2" />
                        </StackPanel>
                    </Grid>
                    <Border Grid.RowSpan="2" Grid.Column="2" BorderBrush="#888" CornerRadius="0"  BorderThickness="1,0,0,0">
                        <TextBlock Text="199" FontSize="52" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Clock Card -->
            <controls:GameClock Grid.Column="1"/>

            <!-- Right Team Card -->
            <Border Grid.Column="2" Background="White" BorderBrush="#888" CornerRadius="5" BorderThickness="2" Padding="10">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.RowSpan="2" Grid.Column="0" BorderBrush="#888" CornerRadius="0" BorderThickness="0,0,1,0">
                        <TextBlock Text="199" FontSize="52" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Text="Team B" FontWeight="Bold" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                    <Rectangle Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Fill="Green" RadiusX="4" RadiusY="4"/>

                    <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                            <Ellipse Width="12" Height="12" Fill="Gray" Margin="2"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Border Background="#EEE" CornerRadius="3" Padding="4" Margin="4,0,4,0">
                                <TextBlock Text="3/3" FontSize="20" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="550"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Row 2: Court (28×15) -->
            <controls:Court x:Name="CourtControl" Grid.Column="1" Height="520" Grid.Row="1" VerticalAlignment="Stretch" />
            <Grid Background="White" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Button Content="MADE"
        Style="{Binding MadeButtonStyle}"
        Command="{Binding SelectActionCommand}"
        CommandParameter="MADE"
        IsEnabled="{Binding IsActionSelectionActive}"
        Grid.Column="1" />
                <!--  <Button Style="{StaticResource Missed}" Content="MISSED" Grid.Column="2"/>-->
                <Button Content="MISSED"
        Style="{Binding MissedButtonStyle}"
        Command="{Binding SelectActionCommand}"
        CommandParameter="Missed"
        IsEnabled="{Binding IsActionSelectionActive}"
        Grid.Column="2" />
                <!--  <Button Style="{StaticResource Foul}" Content="FOUL" Grid.Column="3" />-->
                <Button Content="FOUL"
Style="{Binding FoulButtonStyle}"
Command="{Binding SelectActionCommand}"
CommandParameter="Foul"
IsEnabled="{Binding IsActionSelectionActive}"
Grid.Column="3" />
                <!--  <Button Style="{StaticResource Turnover}" Content="TURNOVER" Grid.Column="4"/>-->
                <Button Content="TURNOVER"
Style="{Binding TurnoverButtonStyle}"
Command="{Binding SelectActionCommand}"
CommandParameter="TURNOVER"
IsEnabled="{Binding IsActionSelectionActive}"
Grid.Column="4" />


            </Grid>
            <Border Grid.Column="0" Grid.Row="1" BorderThickness="2" BorderBrush="#888" VerticalAlignment="Stretch" HorizontalAlignment="Right">
                <ItemsControl ItemsSource="{Binding TeamAPlayers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid VerticalAlignment="Center" x:Name="PlayerGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <!-- KEY: Apply attached properties to the ITEM CONTAINER, not the DataTemplate -->
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Row" Value="{Binding Row}" />
                            <Setter Property="Grid.Column" Value="{Binding Column}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayName}"
        Style="{Binding ButtonStyle}"
        Command="{Binding SelectPlayerCommand}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <Border Grid.Column="2" Grid.Row="1" BorderThickness="2" BorderBrush="#888" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <ItemsControl ItemsSource="{Binding TeamBPlayers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Row" Value="{Binding Row}" />
                            <Setter Property="Grid.Column" Value="{Binding Column}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayName}"
        Style="{Binding ButtonStyle}"
        Command="{Binding SelectPlayerCommand}"/>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <controls:ActionPanelBottom Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="top" HorizontalAlignment="Center"/>
        </Grid>
        <!-- Play‐by‐Play Log -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="5" Background="#F9F9F9" BorderBrush="LightGray" BorderThickness="2">

        </Border>
    </Grid>
</Window>
