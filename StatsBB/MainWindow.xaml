<Window x:Class="StatsBB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:controls="clr-namespace:StatsBB.UserControls" 
        xmlns:viewmodel="clr-namespace:StatsBB.ViewModel" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:converters="clr-namespace:StatsBB.Converters"
        xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Basketball Stats App" Height="1080" Width="1920"
        Background="{StaticResource SystemBackgroundColor}"
        PreviewKeyDown="Window_PreviewKeyDown"
        KeyboardNavigation.TabNavigation="Cycle"
        KeyboardNavigation.ControlTabNavigation="Cycle"
        AutomationProperties.Name="Basketball Statistics Application"
        AutomationProperties.HelpText="Main application window for tracking basketball game statistics">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:ColorAvailabilityConverter x:Key="ColorAvailabilityConverter"/>
        <converters:ColorSelectedConverter x:Key="ColorSelectedConverter"/>


        <!-- FluentUI Semantic Colors -->
        <SolidColorBrush x:Key="PrimaryAColor" Color="Orange" po:Freeze="False"/>
        <SolidColorBrush x:Key="SecondaryAColor" Color="White" po:Freeze="False"/>
        <SolidColorBrush x:Key="PrimaryBColor" Color="Green" po:Freeze="False"/>
        <SolidColorBrush x:Key="SecondaryBColor" Color="White" po:Freeze="False"/>
        
        <!-- Legacy colors updated for better contrast -->
        <SolidColorBrush x:Key="BenchColor" Color="#3F3F46"/>
        <SolidColorBrush x:Key="HoverGrey" Color="#484848"/>
        <SolidColorBrush x:Key="SelectedMadeColor" Color="#00B373"/>
        <SolidColorBrush x:Key="SelectedMissedColor" Color="#D83B01"/>
        <SolidColorBrush x:Key="DarkGrey" Color="#3F3F46"/>
        <SolidColorBrush x:Key="Grey" Color="#5A5A5A"/>

        <Style x:Key="BasePlayerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="64" />
            <Setter Property="Height" Value="64" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <Style x:Key="ActionSelectableButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SystemControlBackgroundColor}"/>
        </Style>
        <!-- Action: Cannot be selected -->
        <Style x:Key="ActionDisabledButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DisabledColor}"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextSecondaryColor}"/>
        </Style>

        <!-- Action: Selected Made -->
        <Style x:Key="ActionSelectedMadeStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SelectedMadeColor}"/>
        </Style>

        <!-- Action: Selected Missed, Foul, Turnover -->
        <Style x:Key="ActionSelectedFailedStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SelectedMissedColor}"/>
        </Style>
        <!-- Court Player: Not Selectable -->
        <Style x:Key="CourtPlayerDisabledStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{StaticResource DisabledColor}"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextSecondaryColor}"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>

        <!-- Court Player: Selectable (Team-colored) -->
        <Style x:Key="CourtPlayerSelectableStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{Binding TeamColor}" />
            <!-- via VM -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                    <!-- hover effect -->
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Bench Player: Not Selectable -->
        <Style x:Key="BenchPlayerDisabledStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{StaticResource BenchColor}"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextSecondaryColor}"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>

        <!-- Bench Player: Selectable -->
        <Style x:Key="BenchPlayerSelectableStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{StaticResource BenchColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{Binding TeamColor}" />
            <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
            <!-- via VM -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SystemControlHoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style x:Key="BenchPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}"  po:Freeze="False">
            <Setter Property="Background" Value="{StaticResource BenchColor}"/>
        </Style>
        <Style x:Key="CourtAPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryAColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryAColor}"/>
        </Style>
        <Style x:Key="BenchAPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource SecondaryAColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryAColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryAColor}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style x:Key="BenchBPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource SecondaryBColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style x:Key="CourtBPlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryBColor}"/>
        </Style>
        <Style x:Key="BenchButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}" po:Freeze="False">
        </Style>

        <Style x:Key="BottomPanelButton" BasedOn="{StaticResource BaseActionButtonStyle}" TargetType="Button">
            <Setter Property="Padding" Value="15"/> 
        </Style>
        <Style x:Key="Made" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="Missed" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="Sub" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="Foul" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="Turnover" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="JumpBall" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="TimeOut" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="FreeThrows" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="Assist" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="Rebound" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <Style x:Key="Steal" TargetType="Button" BasedOn="{StaticResource BottomPanelButton}"/>
        <!-- TEAM A TIMEOUT BUTTON -->
        <Style x:Key="TeamATimeoutStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryAColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryAColor}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="80" />
        </Style>

        <!-- TEAM B TIMEOUT BUTTON -->
        <Style x:Key="TeamBTimeoutStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryBColor}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="80" />
        </Style>

        <Style x:Key="SubButtonStyle" TargetType="Button" BasedOn="{StaticResource BasePlayerButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <!-- TEAM A REBOUND BUTTON -->
        <Style x:Key="TeamAReboundStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryAColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryAColor}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>


        <!-- TEAM B REBOUND BUTTON -->
        <Style x:Key="TeamBReboundStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryBColor}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- TEAM A TECHNICAL FOUL BUTTON STYLE-->
        <Style x:Key="CoachTechnicalTeamAStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryAColor}"  />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryAColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SecondaryAColor}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="BenchTechnicalTeamAStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource SecondaryAColor}"  />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryAColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryAColor}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <!-- TEAM B TECHNICAL FOUL BUTTON STYLE-->
        <Style x:Key="CoachTechnicalTeamBStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryBColor}"  />
            <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBColor}"  />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="BenchTechnicalTeamBStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource SecondaryBColor}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBColor}"  />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <!-- TEAM A TURNOVER BUTTON -->
        <Style x:Key="TeamATurnoverStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryAColor}"  />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryAColor}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- TEAM B TURNOVER BUTTON -->
        <Style x:Key="TeamBTurnoverStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}" po:Freeze="False">
            <Setter Property="Background" Value="{DynamicResource PrimaryBColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SecondaryBColor}"  />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- BLOCK BUTTON -->
        <Style x:Key="BlockStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="40" />
        </Style>

        <!-- SHOT CLOCK VIOLATION BUTTON -->
        <Style x:Key="ShotClockStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="40" />
        </Style>

        <!-- SHOT CLOCK VIOLATION BUTTON -->
        <Style x:Key="NoReboundStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="40" />
        </Style>

        <!-- FOUL TYPE BUTTON -->
        <Style x:Key="FoulTypeButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="280" />
        </Style>
        <!-- REBOUND TYPE BUTTON -->
        <Style x:Key="ReboundTypeButtonStyle" TargetType="Button" BasedOn="{StaticResource FoulTypeButtonStyle}"/>
        <!-- FREE THROW COUNT BUTTON -->
        <Style x:Key="FreeThrowCountButtonStyle" TargetType="Button" BasedOn="{StaticResource FoulTypeButtonStyle}">
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="60" />
        </Style>
        <Style x:Key="FreeThrowCountSelectedStyle" TargetType="Button" BasedOn="{StaticResource FreeThrowCountButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SelectedMadeColor}" />
        </Style>

        <!-- FREE THROW RESULT BUTTON -->
        <Style x:Key="FreeThrowResultButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionSelectableButtonStyle}">
            <Setter Property="Background"  Value="Gray" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="40" />
        </Style>

        <Style x:Key="ShooterCourtPlayerStyle" TargetType="Button" BasedOn="{StaticResource CourtPlayerSelectableStyle}" po:Freeze="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelectedAsFreeThrowShooter}" Value="True">
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ShooterBenchPlayerStyle" TargetType="Button" BasedOn="{StaticResource BenchPlayerSelectableStyle}" po:Freeze="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelectedAsFreeThrowShooter}" Value="True">
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="AssistCourtPlayerStyle" TargetType="Button" BasedOn="{StaticResource CourtPlayerSelectableStyle}" po:Freeze="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelectedAsAssist}" Value="True">
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="AssistBenchPlayerStyle" TargetType="Button" BasedOn="{StaticResource BenchPlayerSelectableStyle}" po:Freeze="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelectedAsAssist}" Value="True">
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <converters:IsTeamAToCourtStyleConverter x:Key="CourtPlayerStyleConverter"
                                     TeamAStyle="{StaticResource CourtAPlayerButtonStyle}"
                                     TeamBStyle="{StaticResource CourtBPlayerButtonStyle}" po:Freeze="False" />

        <converters:IsTeamAToBenchStyleConverter x:Key="BenchPlayerStyleConverter"
                                     TeamAStyle="{StaticResource BenchAPlayerButtonStyle}"
                                     TeamBStyle="{StaticResource BenchBPlayerButtonStyle}" po:Freeze="False" />
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Border x:Name="Border"
                                Width="24" Height="24"
                                BorderBrush="Gray" BorderThickness="2"
                                CornerRadius="4"
                                Background="White"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0">
                                <Path x:Name="CheckMark"
                                  Visibility="Collapsed"
                                  Stroke="Green"
                                  StrokeThickness="2"
                                  Data="M 4 10 L 8 14 L 16 6" />
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="#E0FFE0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <!-- Action: MADE (M) -->
        <KeyBinding Key="Q" Modifiers="Ctrl"
                Command="{Binding SelectActionCommand}"
                CommandParameter="MADE" />

        <!-- Action: MISSED (X) -->
        <KeyBinding Key="W" Modifiers="Ctrl"
                Command="{Binding SelectActionCommand}"
                CommandParameter="MISSED" />

        <!-- Action: FOUL (F) -->
        <KeyBinding Key="F" Modifiers="Ctrl"
                Command="{Binding SelectActionCommand}"
                CommandParameter="FOUL" />

        <!-- Turnover Selection (T) -->
        <KeyBinding Key="T" Modifiers="Ctrl"
                Command="{Binding StartTurnoverCommand}" />

        <!-- Timeout (C) -->
        <KeyBinding Key="C" Modifiers="Ctrl"
                Command="{Binding StartTimeoutCommand}" />

        <!-- Jump Ball (B) -->
        <KeyBinding Key="B" Modifiers="Ctrl"
                Command="{Binding StartJumpBallCommand}" />

        <!-- Substitutions (S) -->
        <KeyBinding Key="S" Modifiers="Ctrl"
                Command="{Binding StartSubstitutionCommand}" />

        <!-- Free Throws (V) -->
        <KeyBinding Key="V" Modifiers="Ctrl"
                Command="{Binding StartFreeThrowsCommand}" />

        <!-- Assist (A) -->
        <KeyBinding Key="A" Modifiers="Ctrl"
                Command="{Binding StartAssistCommand}" />

        <!-- Rebound (R) -->
        <KeyBinding Key="R" Modifiers="Ctrl"
                Command="{Binding StartReboundCommand}" />

        <!-- Steal (S) -->
        <KeyBinding Key="S" Modifiers="Ctrl"
                Command="{Binding StartStealCommand}" />
    </Window.InputBindings>

    <Grid>
        <!-- Main Content -->
        <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                    Background="{StaticResource SystemBackgroundColor}"
                    BorderThickness="0">
            <TabItem IsEnabled="{Binding IsTeamInfoEnabled}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE716;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Team Setup"/>
                    </StackPanel>
                </TabItem.Header>
                <controls:TeamInfoView DataContext="{Binding TeamInfoVM}" />
            </TabItem>
            <TabItem IsEnabled="{Binding IsMainTabEnabled}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE7FC;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Game View"/>
                    </StackPanel>
                </TabItem.Header>
            <Grid x:Name="___No_Name_" Background="{StaticResource SystemBackgroundColor}">
                <!-- Layout: Header, Event Buttons, Main Content -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="340"/>
                </Grid.ColumnDefinitions>

                <!-- ========= Row 0: Team Cards & Clock ========= -->

                <controls:ScoreBoardView Grid.Row="0" Grid.Column="0"
                                         DataContext="{Binding ScoreBoardVM}" />


                <Grid Grid.Row="1" Grid.Column="0" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="600"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Row 2: Court (28×15) -->
                    <Grid Grid.Column="1" Grid.Row="0">
                        <!-- Base Court Control -->
                        <controls:Court x:Name="CourtControl"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" />

                        <!-- Game Setup Panel -->
                        <Grid Visibility="{Binding GamePanelVisibility}" Background="{StaticResource SystemSurfaceColor}" Opacity="0.95" Panel.ZIndex="10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="SETUP GAME" FontSize="24" FontWeight="Bold" Padding="20"
                                        Command="{Binding SetupGameCommand}" Style="{StaticResource BaseActionButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Quick Shot Panel -->
                        <Grid Visibility="{Binding QuickShotPanelVisibility}"
      Background="{StaticResource SystemSurfaceColor}" Opacity="0.95"
      Panel.ZIndex="10">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="380">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>

                                <!-- TEAM A BENCH -->
                                <Border Style="{StaticResource FluentBenchBorder}" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamABenchShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" FlowDirection="RightToLeft" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                            Style="{StaticResource BenchAPlayerButtonStyle}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM A COURT -->
                                <Border Style="{StaticResource FluentCourtBorder}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamACourtShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                            Style="{StaticResource CourtAPlayerButtonStyle}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM B COURT -->
                                <Border Style="{StaticResource FluentCourtBorder}" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBCourtShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                            Style="{StaticResource CourtBPlayerButtonStyle}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- TEAM B BENCH -->
                                <Border Style="{StaticResource FluentBenchBorder}" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl ItemsSource="{Binding EligibleTeamBBenchShotPlayers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Vertical" Height="360"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding DisplayName}"
                            Style="{StaticResource BenchBPlayerButtonStyle}"
                            Command="{Binding SelectPlayerCommand}"
                            Margin="4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Assist Team Selection -->
                        <Grid Visibility="{Binding AssistTeamPanelVisibility}" Background="{StaticResource SystemBackgroundColor}" Opacity="0.95" Panel.ZIndex="10">
