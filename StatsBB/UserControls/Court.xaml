     Stretch="Fill">
                    <Rectangle
              Stroke="Black" StrokeThickness="0.1" Height="15" Width="28"/>

                </Viewbox>
                <Line X1="14" Y1="0" X2="14" Y2="15"
Stroke="Black" StrokeThickness="0.1"/>
                <Ellipse Width="3.6" Height="3.6"
   Canvas.Left="12.2" Canvas.Top="5.7"
   Stroke="Black" StrokeThickness="0.1"/>
                <Rectangle Width="5.8" Height="4.9"
     Canvas.Left="0" Canvas.Top="5.05"
     Stroke="Black" StrokeThickness="0.1"/>
                <Ellipse Width="3.6" Height="3.6"
   Canvas.Left="4.0" Canvas.Top="5.7"
   Stroke="Black" StrokeThickness="0.1"
   StrokeDashArray="4,2"/>
                <Rectangle Width="5.8" Height="4.9"
     Canvas.Left="22.2" Canvas.Top="5.05"
     Stroke="Black" StrokeThickness="0.1"/>
                <Ellipse Width="3.6" Height="3.6"
   Canvas.Left="20.4" Canvas.Top="5.7"
   Stroke="Black" StrokeThickness="0.1"
   StrokeDashArray="4,2"/>
                <Line X1="0"   Y1="0.9"  X2="4" Y2="0.9"
Stroke="Black" StrokeThickness="0.1"/>
                <Line X1="0"   Y1="14.1" X2="4" Y2="14.1"
Stroke="Black" StrokeThickness="0.1"/>
                <Path Stroke="Black" StrokeThickness="0.1"
Data="M4,0.9 A6.75,6.75 0 0 1 4,14.1"/>
                <Line X1="28"   Y1="0.9"  X2="24" Y2="0.9"
Stroke="Black" StrokeThickness="0.1"/>
                <Line X1="28"   Y1="14.1" X2="24" Y2="14.1"
Stroke="Black" StrokeThickness="0.1"/>
                <Path Stroke="Black" StrokeThickness="0.1"
Data="M24,0.9 A6.75,6.75 0 0 0 24,14.1"/>
            </Canvas>
        </Viewbox>
    </Border>
</UserControl>
