<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:StatsBB.ViewModel" x:Class="StatsBB.UserControls.Court"
             mc:Ignorable="d" 
             d:DesignHeight="550              " d:DesignWidth="1008">

    <Border BorderThickness="2" Background="White" BorderBrush="#888" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20">
