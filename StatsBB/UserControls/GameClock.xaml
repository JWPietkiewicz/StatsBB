<UserControl x:Class="StatsBB.UserControls.GameClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border CornerRadius="6" BorderBrush="#5A5A5A" BorderThickness="1" Background="#2D2D30" Width="320" Padding="12">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock x:Name="ArrowAText" Text="←" FontSize="18" Visibility="Collapsed"/>
                    
                    <TextBlock x:Name="PossessionAText" Text="●" FontSize="18" Visibility="Collapsed"/>
                </StackPanel>
                <TextBlock x:Name="PeriodText" Grid.Column="1" Text="Q1 - In Progress" Foreground="#FFFFFF" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="5" />
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="ArrowBText" Text="→" FontSize="18" Visibility="Collapsed"/>
                    
                    <TextBlock x:Name="PossessionBText" Text="●" FontSize="18" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button x:Name="AddMinuteButton" Content="▲" Width="28" Height="28" Background="#3F3F46" Foreground="#FFFFFF" BorderBrush="#5A5A5A" BorderThickness="1" Click="AddMinute_Click" />
                    <Button x:Name="SubtractMinuteButton" Content="▼" Width="28" Height="28" Background="#3F3F46" Foreground="#FFFFFF" BorderBrush="#5A5A5A" BorderThickness="1" Click="SubtractMinute_Click" />
                </StackPanel>
                <Border Grid.Column="1" Padding="0" Margin="0,0">
                    <TextBlock x:Name="TimeText" Text="10:00" Foreground="#FFFFFF" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Button x:Name="AddSecondButton" Content="▲" Width="28" Height="28" Background="#3F3F46" Foreground="#FFFFFF" BorderBrush="#5A5A5A" BorderThickness="1" Click="AddSecond_Click" />
                    <Button x:Name="SubtractSecondButton" Content="▼" Width="28" Height="28" Background="#3F3F46" Foreground="#FFFFFF" BorderBrush="#5A5A5A" BorderThickness="1" Click="SubtractSecond_Click" />
                </StackPanel>
                <Button x:Name="StartStopButton" Grid.Column="3" Content="STOP" Width="75" Height="50" Background="#00B373" Foreground="White" FontWeight="Bold" BorderBrush="#5A5A5A" BorderThickness="1" VerticalAlignment="Center" Margin="10,0,0,0" Click="StartStop_Click"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
