<UserControl x:Class="StatsBB.UserControls.PlayByPlayLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{StaticResource SystemBackgroundColor}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
        <ItemsControl ItemsSource="{Binding Cards}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,8" Padding="12" Background="{StaticResource SystemSurfaceColor}" 
                            BorderBrush="{StaticResource SystemBorderColor}" BorderThickness="1" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="{Binding Header}" FontWeight="Bold" FontSize="14" 
                                       Foreground="{StaticResource SystemTextColor}" Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding Actions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                            <Rectangle Width="12" Height="12" Fill="{Binding TeamColor}" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding PlayerNumber}" Margin="0,0,8,0" 
                                                       Foreground="{StaticResource SystemTextColor}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding FirstName}" Margin="0,0,4,0" 
                                                       Foreground="{StaticResource SystemTextColor}"/>
                                            <TextBlock Text="{Binding LastName}" Margin="0,0,8,0" 
                                                       Foreground="{StaticResource SystemTextColor}"/>
                                            <TextBlock Text="{Binding Action}" 
                                                       Foreground="{StaticResource SystemTextSecondaryColor}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
