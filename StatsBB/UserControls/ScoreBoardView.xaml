<UserControl x:Class="StatsBB.UserControls.ScoreBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:controls="clr-namespace:StatsBB.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Grid Margin="12,16,16,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <controls:TeamCardLeft Grid.Column="0"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <controls:GameClock />
            <Button Command="{Binding SwapSidesCommand}"
                    Style="{StaticResource BaseActionButtonStyle}"
                    ui:ControlHelper.CornerRadius="6"
                    Margin="0,12,0,0" Padding="16,8">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Glyph="&#xE8AB;" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="SWITCH SIDES"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <controls:TeamCardRight Grid.Column="2"/>
    </Grid>
</UserControl>
