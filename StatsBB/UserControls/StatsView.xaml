<UserControl x:Class="StatsBB.UserControls.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Team" Grid.Row="0" Grid.Column="0"/>
            <TextBlock Text="1" Grid.Row="0" Grid.Column="1"/>
            <TextBlock Text="2" Grid.Row="0" Grid.Column="2"/>
            <TextBlock Text="3" Grid.Row="0" Grid.Column="3"/>
            <TextBlock Text="4" Grid.Row="0" Grid.Column="4"/>
            <TextBlock Text="Total" Grid.Row="0" Grid.Column="5"/>

            <TextBlock Text="{Binding Game.HomeTeam.TeamName}" Grid.Row="1" Grid.Column="0"/>
            <TextBlock Text="{Binding HomeP1}" Grid.Row="1" Grid.Column="1"/>
            <TextBlock Text="{Binding HomeP2}" Grid.Row="1" Grid.Column="2"/>
            <TextBlock Text="{Binding HomeP3}" Grid.Row="1" Grid.Column="3"/>
            <TextBlock Text="{Binding HomeP4}" Grid.Row="1" Grid.Column="4"/>
            <TextBlock Text="{Binding HomeScore}" Grid.Row="1" Grid.Column="5"/>

            <TextBlock Text="{Binding Game.AwayTeam.TeamName}" Grid.Row="2" Grid.Column="0"/>
            <TextBlock Text="{Binding AwayP1}" Grid.Row="2" Grid.Column="1"/>
            <TextBlock Text="{Binding AwayP2}" Grid.Row="2" Grid.Column="2"/>
            <TextBlock Text="{Binding AwayP3}" Grid.Row="2" Grid.Column="3"/>
            <TextBlock Text="{Binding AwayP4}" Grid.Row="2" Grid.Column="4"/>
            <TextBlock Text="{Binding AwayScore}" Grid.Row="2" Grid.Column="5"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0" ItemsSource="{Binding HomePlayers}" AutoGenerateColumns="False" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="40"/>
                    <DataGridTextColumn Header="First" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Last" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Pts" Binding="{Binding Points}" Width="50"/>
                    <DataGridTextColumn Header="Ast" Binding="{Binding Assists}" Width="50"/>
                    <DataGridTextColumn Header="Reb" Binding="{Binding Rebounds}" Width="50"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Grid.Column="1" ItemsSource="{Binding AwayPlayers}" AutoGenerateColumns="False" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="40"/>
                    <DataGridTextColumn Header="First" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Last" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Pts" Binding="{Binding Points}" Width="50"/>
                    <DataGridTextColumn Header="Ast" Binding="{Binding Assists}" Width="50"/>
                    <DataGridTextColumn Header="Reb" Binding="{Binding Rebounds}" Width="50"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
