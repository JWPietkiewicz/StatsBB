<UserControl x:Class="StatsBB.UserControls.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:StatsBB.Converters">
    <UserControl.Resources>
        <converters:BoolToXConverter x:Key="BoolToXConverter" />
        <Style x:Key="PeriodResult" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="TeamNameStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
        </Style>
        <Style x:Key="ScoreStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource SystemBackgroundColor}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <Grid MinWidth="1050" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding HomeTeamName}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10" Style="{StaticResource TeamNameStyle}"/>
            <TextBlock Text="{Binding HomeScore}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Style="{StaticResource ScoreStyle}"/>
            <TextBlock Text="-" Grid.Column="2" Grid.Row="0" VerticalAlignment="Bottom" FontSize="48" Margin="10" Style="{StaticResource ScoreStyle}"/>
            <TextBlock Text="{Binding AwayScore}" Grid.Row="0" Grid.Column="3" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Style="{StaticResource ScoreStyle}"/>
            <TextBlock Text="{Binding AwayTeamName}" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Style="{StaticResource TeamNameStyle}"/>
            <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
                <ItemsControl x:Name="PeriodResults" ItemsSource="{Binding PeriodResults}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Style="{StaticResource PeriodResult}" Text="{Binding HomePeriodScore}" />
                                <TextBlock Style="{StaticResource PeriodResult}" Text=" : " />
                                <TextBlock Style="{StaticResource PeriodResult}" Text="{Binding AwayPeriodScore}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
                </Grid>
                <StackPanel MinWidth="1070" HorizontalAlignment="Center">
                    <Separator Margin="20,16" Background="{StaticResource SystemBorderColor}"/>
                    <TextBlock Text="{Binding HomeTeamName}" FontWeight="Bold" Margin="12" FontSize="24" Foreground="{StaticResource SystemTextColor}"/>

                    <DataGrid ItemsSource="{Binding HomePlayers}" AutoGenerateColumns="False" HeadersVisibility="Column" 
                              CanUserAddRows="False" IsReadOnly="True" MinWidth="1050" 
                              HorizontalAlignment="Stretch" BorderThickness="1" 
                              Background="{StaticResource SystemSurfaceColor}"
                              BorderBrush="{StaticResource SystemBorderColor}">
                        <DataGrid.Resources>
                            <!-- Professional DataGrid styling -->
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="{StaticResource SystemBorderColor}"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SystemControlHoverColor}"/>
                                        <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SystemControlBackgroundColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="BorderBrush" Value="{StaticResource SystemBorderColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="MinHeight" Value="32"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Background" Value="{StaticResource SystemControlBackgroundColor}"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SystemControlHoverColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Player number -->
                            <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- First name -->
                            <DataGridTextColumn Header="FIRST" Binding="{Binding FirstName}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="4,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Last name -->
                            <DataGridTextColumn Header="LAST" Binding="{Binding LastName}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="4,0"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Points -->
                            <DataGridTextColumn Header="PTS" Binding="{Binding Points}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Field goals (combined) -->
                            <DataGridTextColumn Header="FG" Width="70">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0}/{1}">
                                        <Binding Path="FieldGoalsMade"/>
                                        <Binding Path="FieldGoalsAttempted"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- 2-point field goals -->
                            <DataGridTextColumn Header="2FG" Width="70">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0}/{1}">
                                        <Binding Path="ShotsMade2pt"/>
                                        <Binding Path="ShotAttempts2pt"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- 3-point field goals -->
                            <DataGridTextColumn Header="3FG" Width="70">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0}/{1}">
                                        <Binding Path="ShotsMade3pt"/>
                                        <Binding Path="ShotAttempts3pt"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Free throws -->
                            <DataGridTextColumn Header="FT" Width="70">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0}/{1}">
                                        <Binding Path="FreeThrowsMade"/>
                                        <Binding Path="FreeThrowsAttempted"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Offensive rebounds -->
                            <DataGridTextColumn Header="OREB" Binding="{Binding OffensiveRebounds}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Defensive rebounds -->
                            <DataGridTextColumn Header="DREB" Binding="{Binding DefensiveRebounds}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Total rebounds -->
                            <DataGridTextColumn Header="REB" Binding="{Binding Rebounds}" Width="45">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Assists -->
                            <DataGridTextColumn Header="AST" Binding="{Binding Assists}" Width="45">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Personal fouls -->
                            <DataGridTextColumn Header="PF" Binding="{Binding FoulsCommitted}" Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Turnovers -->
                            <DataGridTextColumn Header="TO" Binding="{Binding Turnovers}" Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Steals -->
                            <DataGridTextColumn Header="STL" Binding="{Binding Steals}" Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Blocks -->
                            <DataGridTextColumn Header="BLK" Binding="{Binding Blocks}" Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Separator Margin="20,16" Background="{StaticResource SystemBorderColor}"/>

                    <TextBlock Text="{Binding AwayTeamName}" FontWeight="Bold" Margin="12" FontSize="24" Foreground="{StaticResource SystemTextColor}"/>
                    <DataGrid ItemsSource="{Binding AwayPlayers}" AutoGenerateColumns="False" HeadersVisibility="Column" 
                              CanUserAddRows="False" IsReadOnly="True" MinWidth="1050" 
                              HorizontalAlignment="Stretch" BorderThickness="1" 
                              Background="{StaticResource SystemSurfaceColor}"
                              BorderBrush="{StaticResource SystemBorderColor}">
                        <DataGrid.Resources>
                            <!-- Professional DataGrid styling -->
