<UserControl x:Class="StatsBB.UserControls.TeamInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:converters="clr-namespace:StatsBB.Converters"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <UserControl.Resources>
        <converters:ColorAvailabilityConverter x:Key="ColorAvailabilityConverter"/>
        <converters:ColorSelectedConverter x:Key="ColorSelectedConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- FluentUI Team Color Button Style -->
        <Style x:Key="FluentTeamColorButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButtonStyle}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Border x:Name="ColorBorder"
                                    Width="50" Height="50"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextElement.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ColorBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="ColorBorder" Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ColorBorder" Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- FluentUI TextBox Style for Player Edit -->
        <Style x:Key="FluentPlayerEditTextStyle" TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
            <EventSetter Event="PreviewKeyDown" Handler="PlayerTextBox_PreviewKeyDown" />
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" Margin="16">
        
        <!-- HOME TEAM CARD -->
        <Border Width="600" VerticalAlignment="Stretch" CornerRadius="8" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1" Margin="0,0,8,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="{DynamicResource SystemControlBackgroundAccentBrush}" 
                        CornerRadius="8,8,0,0" Padding="16,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:FontIcon Glyph="&#xE80F;" FontSize="20" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock Text="HOME TEAM" FontWeight="SemiBold" FontSize="20" Foreground="White"/>
                        <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="White" Margin="8,0,0,0"
                                     Visibility="{Binding HomeTeamConfirmed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <StackPanel Margin="24,16">
                
                    <!-- Team Name Section -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Team Name" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding HomeTeamName, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="16" Padding="12,8"/>
                    </StackPanel>
                    
                    <!-- Team Color Section -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Team Colors" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding ColorOptions}" IsEnabled="{Binding HomeColorEnabled}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="54" ItemHeight="54" Width="550"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Style="{StaticResource FluentTeamColorButtonStyle}"
                                           Background="{Binding ColorBrush}" Foreground="{Binding TextBrush}" 
                                           GroupName="TeamAColorGroup">
                                    <RadioButton.Content>99</RadioButton.Content>
                                    <RadioButton.IsChecked>
                                        <MultiBinding Converter="{StaticResource ColorSelectedConverter}" Mode="OneWay">
                                            <Binding Path="DataContext.TeamAColorOption" RelativeSource="{RelativeSource AncestorType=Window}" Mode="OneWay"/>
                                            <Binding Mode="OneWay" />
                                        </MultiBinding>
                                    </RadioButton.IsChecked>
                                    <RadioButton.Command>
                                        <Binding Path="DataContext.SelectTeamAColorCommand" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                    </RadioButton.Command>
                                    <RadioButton.CommandParameter>
                                        <Binding />
                                    </RadioButton.CommandParameter>
                                    <RadioButton.IsEnabled>
                                        <MultiBinding Converter="{StaticResource ColorAvailabilityConverter}" Mode="OneWay">
                                            <Binding Path="DataContext.TeamBColorOption" RelativeSource="{RelativeSource AncestorType=Window}" Mode="OneWay"/>
                                            <Binding Mode="OneWay" />
                                        </MultiBinding>
                                    </RadioButton.IsEnabled>
                                </RadioButton>
                            </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Players Section -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Players" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <DataGrid x:Name="HomeGrid" ItemsSource="{Binding HomePlayers}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" SelectionUnit="Cell"
                                  MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="50" 
                                                EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" 
                                                EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="2*" 
                                                EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                            <DataGridTemplateColumn Header="Active" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsPlaying, Mode=TwoWay}" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding LoadHomeTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE8E5;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Load Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SaveHomeTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE74E;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Save Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ConfirmHomeTeamCommand}" Margin="4" Padding="16,8"
                                ui:ControlHelper.CornerRadius="4"
                                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                                Foreground="White"
                                IsEnabled="{Binding HomeColorEnabled}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Margin="0,0,8,0" Foreground="White"/>
                                <TextBlock Text="Confirm Team" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- AWAY TEAM CARD -->
        <Border Width="600" VerticalAlignment="Stretch" CornerRadius="8" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1" Margin="8,0,0,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="{DynamicResource SystemControlBackgroundAccentBrush}" 
                        CornerRadius="8,8,0,0" Padding="16,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:FontIcon Glyph="&#xE8F4;" FontSize="20" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock Text="AWAY TEAM" FontWeight="SemiBold" FontSize="20" Foreground="White"/>
                        <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="White" Margin="8,0,0,0"
                                     Visibility="{Binding AwayTeamConfirmed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <StackPanel Margin="24,16">
                    
                    <!-- Team Name Section -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Team Name" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding AwayTeamName, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="16" Padding="12,8"/>
                    </StackPanel>
                    
                    <!-- Team Color Section -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Team Colors" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding ColorOptions}" IsEnabled="{Binding AwayColorEnabled}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="54" ItemHeight="54" Width="550"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Style="{StaticResource FluentTeamColorButtonStyle}"
                                               Background="{Binding ColorBrush}" Foreground="{Binding TextBrush}" 
                                               GroupName="TeamBColorGroup">
                                        <RadioButton.Content>99</RadioButton.Content>
                                        <RadioButton.IsChecked>
                                            <MultiBinding Converter="{StaticResource ColorSelectedConverter}" Mode="OneWay">
                                                <Binding Path="DataContext.TeamBColorOption" RelativeSource="{RelativeSource AncestorType=Window}" Mode="OneWay"/>
                                                <Binding Mode="OneWay" />
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                        <RadioButton.Command>
                                            <Binding Path="DataContext.SelectTeamBColorCommand" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                        </RadioButton.Command>
                                        <RadioButton.CommandParameter>
                                            <Binding />
                                        </RadioButton.CommandParameter>
                                        <RadioButton.IsEnabled>
                                            <MultiBinding Converter="{StaticResource ColorAvailabilityConverter}" Mode="OneWay">
                                                <Binding Path="DataContext.TeamAColorOption" RelativeSource="{RelativeSource AncestorType=Window}" Mode="OneWay"/>
                                                <Binding Mode="OneWay" />
                                            </MultiBinding>
                                        </RadioButton.IsEnabled>
                                    </RadioButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Players Section -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Players" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <DataGrid x:Name="AwayGrid" ItemsSource="{Binding AwayPlayers}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" SelectionUnit="Cell"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="50" 
                                                    EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" 
                                                    EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="2*" 
                                                    EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                                <DataGridTemplateColumn Header="Active" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsPlaying, Mode=TwoWay}" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding LoadAwayTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE8E5;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Load Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SaveAwayTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE74E;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Save Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ConfirmAwayTeamCommand}" Margin="4" Padding="16,8"
                                ui:ControlHelper.CornerRadius="4"
                                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                                Foreground="White"
                                IsEnabled="{Binding AwayColorEnabled}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Margin="0,0,8,0" Foreground="White"/>
                                <TextBlock Text="Confirm Team" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </StackPanel>
</UserControl>
