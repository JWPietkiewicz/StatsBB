<UserControl x:Class="StatsBB.UserControls.TeamInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:converters="clr-namespace:StatsBB.Converters"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <UserControl.Resources>
        <converters:ColorAvailabilityConverter x:Key="ColorAvailabilityConverter"/>
        <converters:ColorSelectedConverter x:Key="ColorSelectedConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- FluentUI Team Color Button Style -->
        <Style x:Key="FluentTeamColorButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="ColorBorder"
                                    Width="58" Height="58"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="{StaticResource SystemBorderColor}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextElement.Foreground="{TemplateBinding Foreground}"
                                                TextElement.FontWeight="Bold"
                                                TextElement.FontSize="16"/>
                            </Border>
                            <!-- Selection Indicator -->
                            <Border x:Name="SelectionRing"
                                    Width="64" Height="64"
                                    CornerRadius="10"
                                    BorderThickness="3"
                                    BorderBrush="{StaticResource SystemTextColor}"
                                    Opacity="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SelectionRing" Property="Opacity" Value="1"/>
                                <Setter TargetName="ColorBorder" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ColorBorder" Property="BorderBrush" Value="{StaticResource SystemTextColor}"/>
                                <Setter TargetName="ColorBorder" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ColorBorder" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- FluentUI TextBox Style for Player Edit -->
        <Style x:Key="FluentPlayerEditTextStyle" TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
            <EventSetter Event="PreviewKeyDown" Handler="PlayerTextBox_PreviewKeyDown" />
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        
        <!-- Player Number TextBox Style with Validation -->
        <Style x:Key="PlayerNumberTextStyle" TargetType="TextBox" BasedOn="{StaticResource FluentPlayerEditTextStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasValidationErrors}" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlErrorTextBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataGrid Row Style with validation feedback -->
        <Style x:Key="PlayerRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasValidationErrors}" Value="True">
                    <Setter Property="Background" Value="{StaticResource ErrorColor}" />
                    <Setter Property="Opacity" Value="0.2"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SystemControlHoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Enhanced Team Name TextBox Style -->
        <Style x:Key="TeamNameTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Background" Value="{StaticResource SystemControlBackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SystemBorderColor}"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource SystemTextColor}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource SystemBackgroundColor}">
        <StackPanel Orientation="Horizontal" Margin="20">
            
            <!-- HOME TEAM CARD -->
            <Border Width="620" VerticalAlignment="Stretch" CornerRadius="8" 
                    Background="{StaticResource SystemSurfaceColor}"
                    BorderBrush="{StaticResource SystemBorderColor}"
                    BorderThickness="1" Margin="0,0,12,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource SystemControlBackgroundColor}" 
                        CornerRadius="8,8,0,0" Padding="16,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:FontIcon Glyph="&#xE80F;" FontSize="20" Foreground="{StaticResource SystemTextColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="HOME TEAM" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource SystemTextColor}"/>
                        <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource SuccessColor}" Margin="8,0,0,0"
                                     Visibility="{Binding HomeTeamConfirmed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <StackPanel Margin="24,16">
                
                    <!-- Team Name Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Team Name" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBox Text="{Binding HomeTeamName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TeamNameTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Team Color Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Team Colors" Style="{StaticResource SectionHeaderStyle}"/>
                        <ItemsControl ItemsSource="{Binding ColorOptions}" IsEnabled="{Binding HomeColorEnabled}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="72" ItemHeight="72" Width="580"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Style="{StaticResource FluentTeamColorButtonStyle}"
                                           Background="{Binding ColorBrush}" Foreground="{Binding TextBrush}" 
                                           GroupName="TeamAColorGroup">
                                    <RadioButton.Content>99</RadioButton.Content>
                                    <RadioButton.IsChecked>
                                        <MultiBinding Converter="{StaticResource ColorSelectedConverter}" Mode="OneWay">
                                            <Binding Path="DataContext.TeamAColorOption" RelativeSource="{RelativeSource AncestorType=UserControl}" Mode="OneWay"/>
                                            <Binding Mode="OneWay" />
                                        </MultiBinding>
                                    </RadioButton.IsChecked>
                                    <RadioButton.Command>
                                        <Binding Path="DataContext.SelectTeamAColorCommand" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                    </RadioButton.Command>
                                    <RadioButton.CommandParameter>
                                        <Binding />
                                    </RadioButton.CommandParameter>
                                    <RadioButton.IsEnabled>
                                        <MultiBinding Converter="{StaticResource ColorAvailabilityConverter}" Mode="OneWay">
                                            <Binding Path="DataContext.TeamBColorOption" RelativeSource="{RelativeSource AncestorType=UserControl}" Mode="OneWay"/>
                                            <Binding Mode="OneWay" />
                                        </MultiBinding>
                                    </RadioButton.IsEnabled>
                                </RadioButton>
                            </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Players Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Players" Style="{StaticResource SectionHeaderStyle}"/>
                        <DataGrid x:Name="HomeGrid" ItemsSource="{Binding HomePlayers}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" SelectionUnit="Cell"
                                  MaxHeight="300" RowStyle="{StaticResource PlayerRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Number, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Width="60" 
                                                EditingElementStyle="{StaticResource PlayerNumberTextStyle}">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasValidationErrors}" Value="True">
                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                <Setter Property="ToolTip" Value="{Binding [Number]}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="*" 
                                                EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="2*" 
                                                EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                            <DataGridTemplateColumn Header="Active" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsPlaying, Mode=TwoWay}" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  ToolTip="Select to include player in game roster"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Captain" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <RadioButton IsChecked="{Binding IsCaptain, Mode=TwoWay}" 
                                                     GroupName="HomeCaptain" 
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     ToolTip="Select team captain"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding LoadHomeTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE8E5;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Load Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SaveHomeTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE74E;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Save Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ConfirmHomeTeamCommand}" Margin="4" Padding="16,8"
                                ui:ControlHelper.CornerRadius="4"
                                Background="{StaticResource SuccessColor}"
                                Foreground="{StaticResource SystemTextColor}"
                                IsEnabled="{Binding CanConfirmHomeTeam}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Margin="0,0,8,0" Foreground="{StaticResource SystemTextColor}"/>
                                <TextBlock Text="Confirm Team" Foreground="{StaticResource SystemTextColor}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- AWAY TEAM CARD -->
        <Border Width="620" VerticalAlignment="Stretch" CornerRadius="8" 
                Background="{StaticResource SystemSurfaceColor}"
                BorderBrush="{StaticResource SystemBorderColor}"
                BorderThickness="1" Margin="12,0,0,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource SystemControlBackgroundColor}" 
                        CornerRadius="8,8,0,0" Padding="16,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:FontIcon Glyph="&#xE8F4;" FontSize="20" Foreground="{StaticResource SystemTextColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="AWAY TEAM" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource SystemTextColor}"/>
                        <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource SuccessColor}" Margin="8,0,0,0"
                                     Visibility="{Binding AwayTeamConfirmed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <StackPanel Margin="24,16">
                    
                    <!-- Team Name Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Team Name" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBox Text="{Binding AwayTeamName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TeamNameTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Team Color Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Team Colors" Style="{StaticResource SectionHeaderStyle}"/>
                        <ItemsControl ItemsSource="{Binding ColorOptions}" IsEnabled="{Binding AwayColorEnabled}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="72" ItemHeight="72" Width="580"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Style="{StaticResource FluentTeamColorButtonStyle}"
                                               Background="{Binding ColorBrush}" Foreground="{Binding TextBrush}" 
                                               GroupName="TeamBColorGroup">
                                        <RadioButton.Content>99</RadioButton.Content>
                                        <RadioButton.IsChecked>
                                            <MultiBinding Converter="{StaticResource ColorSelectedConverter}" Mode="OneWay">
                                                <Binding Path="DataContext.TeamBColorOption" RelativeSource="{RelativeSource AncestorType=UserControl}" Mode="OneWay"/>
                                                <Binding Mode="OneWay" />
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                        <RadioButton.Command>
                                            <Binding Path="DataContext.SelectTeamBColorCommand" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                        </RadioButton.Command>
                                        <RadioButton.CommandParameter>
                                            <Binding />
                                        </RadioButton.CommandParameter>
                                        <RadioButton.IsEnabled>
                                            <MultiBinding Converter="{StaticResource ColorAvailabilityConverter}" Mode="OneWay">
                                                <Binding Path="DataContext.TeamAColorOption" RelativeSource="{RelativeSource AncestorType=UserControl}" Mode="OneWay"/>
                                                <Binding Mode="OneWay" />
                                            </MultiBinding>
                                        </RadioButton.IsEnabled>
                                    </RadioButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Players Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Players" Style="{StaticResource SectionHeaderStyle}"/>
                        <DataGrid x:Name="AwayGrid" ItemsSource="{Binding AwayPlayers}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" SelectionUnit="Cell"
                                  MaxHeight="300" RowStyle="{StaticResource PlayerRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Number, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Width="60" 
                                                    EditingElementStyle="{StaticResource PlayerNumberTextStyle}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasValidationErrors}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
                                                    <Setter Property="Opacity" Value="0.2"/>
                                                    <Setter Property="ToolTip" Value="{Binding [Number]}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="*" 
                                                    EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="2*" 
                                                    EditingElementStyle="{StaticResource FluentPlayerEditTextStyle}"/>
                                <DataGridTemplateColumn Header="Active" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsPlaying, Mode=TwoWay}" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                                      ToolTip="Select to include player in game roster"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Captain" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <RadioButton IsChecked="{Binding IsCaptain, Mode=TwoWay}" 
                                                         GroupName="AwayCaptain" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         ToolTip="Select team captain"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding LoadAwayTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE8E5;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Load Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SaveAwayTeamCommand}" Margin="4" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE74E;" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Save Team"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ConfirmAwayTeamCommand}" Margin="4" Padding="16,8"
                                ui:ControlHelper.CornerRadius="4"
                                Background="{StaticResource SuccessColor}"
                                Foreground="{StaticResource SystemTextColor}"
                                IsEnabled="{Binding CanConfirmAwayTeam}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="&#xE73E;" FontSize="16" Margin="0,0,8,0" Foreground="{StaticResource SystemTextColor}"/>
                                <TextBlock Text="Confirm Team" Foreground="{StaticResource SystemTextColor}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
        </StackPanel>
    </Grid>
</UserControl>
