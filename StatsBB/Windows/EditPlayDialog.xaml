<Window x:Class="StatsBB.Windows.EditPlayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Play Action" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{DynamicResource WindowStyle}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Edit Play Action" FontSize="16" FontWeight="Bold"
                   Foreground="{DynamicResource SystemTextColor}" Margin="0,0,0,20"/>

        <!-- Player Number -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Player Number:" Width="120" VerticalAlignment="Center"
                       Foreground="{DynamicResource SystemTextColor}"/>
            <TextBox Text="{Binding PlayerNumber}" Width="100" Height="25"/>
        </StackPanel>

        <!-- First Name -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="First Name:" Width="120" VerticalAlignment="Center"
                       Foreground="{DynamicResource SystemTextColor}"/>
            <TextBox Text="{Binding FirstName}" Width="200" Height="25"/>
        </StackPanel>

        <!-- Last Name -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Last Name:" Width="120" VerticalAlignment="Center"
                       Foreground="{DynamicResource SystemTextColor}"/>
            <TextBox Text="{Binding LastName}" Width="200" Height="25"/>
        </StackPanel>

        <!-- Action -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Action:" Width="120" VerticalAlignment="Center"
                       Foreground="{DynamicResource SystemTextColor}"/>
            <ComboBox SelectedItem="{Binding Action}" Width="200" Height="25" IsEditable="True">
                <ComboBoxItem>2PM</ComboBoxItem>
                <ComboBoxItem>2PA MISSED</ComboBoxItem>
                <ComboBoxItem>3PM</ComboBoxItem>
                <ComboBoxItem>3PA MISSED</ComboBoxItem>
                <ComboBoxItem>FTM</ComboBoxItem>
                <ComboBoxItem>FTA MISSED</ComboBoxItem>
                <ComboBoxItem>REBOUND</ComboBoxItem>
                <ComboBoxItem>ASSIST</ComboBoxItem>
                <ComboBoxItem>TURNOVER</ComboBoxItem>
                <ComboBoxItem>STEAL</ComboBoxItem>
                <ComboBoxItem>BLOCK</ComboBoxItem>
                <ComboBoxItem>FOUL PERSONAL</ComboBoxItem>
                <ComboBoxItem>TIMEOUT</ComboBoxItem>
                <ComboBoxItem>SUB PLAYER IN</ComboBoxItem>
                <ComboBoxItem>SUB PLAYER OUT</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Team Color Preview -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Team Color:" Width="120" VerticalAlignment="Center"
                       Foreground="{DynamicResource SystemTextColor}"/>
            <Rectangle Width="20" Height="20" Fill="{Binding TeamColor}" Stroke="Gray" StrokeThickness="1"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="75" Height="30" Margin="0,0,10,0" 
                    IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Height="30" 
                    IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>